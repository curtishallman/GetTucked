<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".VancouverFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/textView4"
        android:layout_width="419dp"
        android:layout_height="276dp"
        android:background="@drawable/vancouver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="426dp"
        android:layout_height="335dp"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_holiday"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/radissonvan"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="Radisson Hotel Vancouver Airport"
                android:textColor="@android:color/white"
                android:textColorHighlight="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_ramada"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/moda"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="Moda Hotel"
                android:textColor="@android:color/white"
                android:textColorHighlight="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_sandman"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/sandmancitycentre"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="Sandman City Centre"
                android:textColor="@android:color/white"
                android:textColorHighlight="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_hampton"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/vintagepark"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="Executive Hotel Vintage Park"
                android:textColor="@android:color/white"
                android:textColorHighlight="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_plaza"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/centuryplaza"
                android:fontFamily="monospace"
                android:gravity="center"
                android:text="Century Plaza Hotel"
                android:textColor="@android:color/white"
                android:textColorHighlight="@android:color/black"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="179dp"
        android:layout_height="59dp"
        android:gravity="center"
        android:text="Vancouver Hotels"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

</androidx.constraintlayout.widget.ConstraintLayout>